generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  seller
  customer
  admin
}

model User {
  id        Int        @id @default(autoincrement())
  email     String?    @unique
  createdAt DateTime   @default(now())
  roles     UserRole[] @default([customer])
}

model EmailCode {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  code      Int
  createdAt DateTime @default(now())
}

model GoodCategory {
  id          Int            @id @default(autoincrement())
  title       String
  description String
  parentId    Int?
  parent      GoodCategory?  @relation("GoodCategory", fields: [parentId], references: [id])
  children    GoodCategory[] @relation("GoodCategory")
  Good        Good[]
}

model Good {
  id          String       @id @default(cuid())
  name        String
  description String
  price       Float
  categoryId  Int
  category    GoodCategory @relation(fields: [categoryId], references: [id])
  createdAt   DateTime     @default(now())
}
